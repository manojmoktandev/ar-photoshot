<% extend('../layout') %>
<div class="container">
    <form method="POST">
        <% if(data){ %>
            <div class="form-group">
                <input type="text" class="form-control" id="id" aria-describedby="idHelp" placeholder="Enter id"  name="id" value=<%=data.id%> hidden>
            </div>
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" class="form-control" id="name" name="name" value= <%=data.name%>>
            </div>
            <button type="submit" class="btn btn-primary">Update</button>
        <% }else{ %>
            <h5>No Data To Edit</h5>
        <% } %>
    </form>
</div>