<% extend('../layout') %>
<div class="container">
    <form method="POST">
        <% if(data){ %>
            <div class="form-group">
                <input type="text" class="form-control" id="id" aria-describedby="idHelp" placeholder="Enter id"  name="id" value=<%=data.id%> hidden>
            </div>
            <div class="form-group">
                <label for="event_name">Event Name</label>
                <input type="text" class="form-control" id="event_name" name="event_name" value= <%=data.event_name%>>
            </div>
            <div class="form-group">
                <label for="event_type">Event Type</label>
                <input type="text" class="form-control" id="event_type" name="event_type" value= <%=data.event_type%>>
            </div>
            <button type="submit" class="btn btn-primary">Update</button>
        <% }else{ %>
            <h5>No Event Data To Edit</h5>
        <% } %>
    </form>
</div>